pipeline {}
      agent {label 'dockeragent'}

    options {
        // è·³è¿‡é»˜è®¤çš„ SCM ç­¾å‡ºï¼ˆå¦‚æœä½ æƒ³å®Œå…¨æ§åˆ¶ checkout æ­¥éª¤ï¼‰
        skipDefaultCheckout()
