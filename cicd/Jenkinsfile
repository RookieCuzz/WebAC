pipeline {
      agent {label 'dockeragent'}

    options {
        // è·³è¿‡é»˜è®¤çš„ SCM ç­¾å‡ºï¼ˆå¦‚æœä½ æƒ³å®Œå…¨æ§åˆ¶ checkout æ­¥éª¤ï¼‰
        skipDefaultCheckout()
    }
    environment {
        // å®šä¹‰ç¯å¢ƒå˜é‡
        APP_NAME = 'webac'
        REGISTRY = 'crpi-vqe38j3xeblrq0n4.cn-hangzhou.personal.cr.aliyuncs.com/spring-mctown'
    }
    
    stages {
        stage('æ£€å‡ºä»£ç ') {
            steps {
                // ç½‘ç»œä¸ Git å¯é æ€§å¢å¼ºï¼šé•œåƒåŠ é€Ÿã€ç¼“å†²ã€ä½é€Ÿå®¹å¿
                sh '''
                    git config --global http.postBuffer 524288000
                    git config --global http.lowSpeedLimit 1
                    git config --global http.lowSpeedTime 120
                    # å°† GitHub æµé‡é‡å†™åˆ°å›½å†…é•œåƒï¼ˆgitcloneï¼‰
                   # git config --global url."https://gitclone.com/github.com/".insteadof "https://github.com/"
                '''

                // æ¸…ç†å·¥ä½œåŒºåè¿›è¡Œæµ…å…‹éš†ï¼Œå¢åŠ è¶…æ—¶ä¸é‡è¯•
                deleteDir()
                cleanWs()
                timeout(time: 10, unit: 'MINUTES') {
                    retry(3) {
                        checkout scm
                    }
                }
            }
        }
        
        stage('Docker æ„å»ºä¸æ¨é€') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'aliyun-docker-login',
                    usernameVariable: 'DOCKER_USERNAME',
                    passwordVariable: 'DOCKER_PASSWORD'
                )]) {
                    sh """
                        echo "\$DOCKER_PASSWORD" | docker login --username \$DOCKER_USERNAME --password-stdin ${env.REGISTRY.split('/')[0]}
                    """
                }
                
                script {
                    def imageTag = "${env.REGISTRY}/${env.APP_NAME}:${env.BUILD_NUMBER}"
                    def latestTag = "${env.REGISTRY}/${env.APP_NAME}:latest"
                    
                    sh """
                        ls -l
                        docker build -t ${imageTag} --network=host -f cicd/Dockerfile .
                        docker tag ${imageTag} ${latestTag}
                        docker push ${imageTag}
                        docker push ${latestTag}
                    """
                }
            }
        }
        
        stage('éƒ¨ç½²æµ‹è¯•ç¯å¢ƒ') {
//             when {
//                 branch 'Test'
//             }
            steps {
                script {
                    def imageTag = "${env.REGISTRY}/${env.APP_NAME}:${env.BUILD_NUMBER}"
                    
                    withCredentials([usernamePassword(
                        credentialsId: 'aliyun-docker-login',
                        usernameVariable: 'DOCKER_USERNAME',
                        passwordVariable: 'DOCKER_PASSWORD'
                    )]) {
                        sh """
                            echo "\$DOCKER_PASSWORD" | docker login --username \$DOCKER_USERNAME --password-stdin ${env.REGISTRY.split('/')[0]}
                            cd cicd
                            IMAGE=${imageTag} APP_NAME=${env.APP_NAME} SPRING_PROFILES_ACTIVE=test \
                              docker compose -f docker-compose.yml down || true
                            IMAGE=${imageTag} APP_NAME=${env.APP_NAME} SPRING_PROFILES_ACTIVE=test \
                              docker compose -f docker-compose.yml pull
                            IMAGE=${imageTag} APP_NAME=${env.APP_NAME} SPRING_PROFILES_ACTIVE=test \
                              docker compose -f docker-compose.yml up -d --remove-orphans
                        """
                    }
                }
            }
        }
        
        stage('éƒ¨ç½²ç”Ÿäº§ç¯å¢ƒ') {
            when {
                anyOf {
                    branch 'main'
                    branch 'prod'
                }
            }
            steps {
                // æ‰‹åŠ¨ç¡®è®¤éƒ¨ç½²åˆ°ç”Ÿäº§ç¯å¢ƒ
                input message: 'ç¡®è®¤éƒ¨ç½²åˆ°ç”Ÿäº§ç¯å¢ƒ?', ok: 'éƒ¨ç½²'
                
                script {
                    def imageTag = "${env.REGISTRY}/${env.APP_NAME}:${env.BUILD_NUMBER}"
                    
                    withCredentials([usernamePassword(
                        credentialsId: 'aliyun-docker-login',
                        usernameVariable: 'DOCKER_USERNAME',
                        passwordVariable: 'DOCKER_PASSWORD'
                    )]) {
                        sh """
                            echo "\$DOCKER_PASSWORD" | docker login --username \$DOCKER_USERNAME --password-stdin ${env.REGISTRY.split('/')[0]}
                            cd cicd
                            IMAGE=${imageTag} APP_NAME=${env.APP_NAME} SPRING_PROFILES_ACTIVE=prod \
                              docker compose -f docker-compose.yml down || true
                            IMAGE=${imageTag} APP_NAME=${env.APP_NAME} SPRING_PROFILES_ACTIVE=prod \
                              docker compose -f docker-compose.yml pull
                            IMAGE=${imageTag} APP_NAME=${env.APP_NAME} SPRING_PROFILES_ACTIVE=prod \
                              docker compose -f docker-compose.yml up -d --remove-orphans
                        """
                    }
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
        success {
            echo "âœ… æ„å»ºæˆåŠŸï¼"
        }
        failure {
            echo "ğŸ”¥ æ„å»ºå¤±è´¥ï¼Œè¯·æ£€æŸ¥æ—¥å¿—ã€‚"
        }
    }

}
